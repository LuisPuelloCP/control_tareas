<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">

    <title>Lista de Tareas</title>
  </head>
  <body>
    <nav class="navbar navbar-light bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand text-light">Lista de Tareas</a>
        <ul class="navbar-nav d-flex">
          <li class="nav-item">
            <a class="btn btn-outline-primary" aria-current="page" href="/"
              >Inicio</a
            >
            <a class="btn btn-outline-danger" aria-current="page" href="/logout"
              >Cerrar sesion</a
            >
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <div class="col pt-5">
        <table id="tableTaskList" class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Name</th>
              <th scope="col">Status</th>
              <th scope="col">Description</th>
              <th scope="col">Funcion</th>
            </tr>
          </thead>
          <tbody>
            <% tasks.forEach(function(task){ %>
            <tr>
              <th><%= task.id %></th>
              <td><%= task.name %></td>
              <td><%= task.status %></td>
              <td><%= task.description %></td>
              <td><a href="/task/edit/<%= task.id %>">Editar</a></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
      $(document).ready(function filter() {
        $('#tableTaskList').DataTable();
    } );
    </script>
  </body>
</html>
